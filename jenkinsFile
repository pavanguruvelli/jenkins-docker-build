pipeline {
    agent {
        docker {
            image 'maven:3.9.0-eclipse-temurin-17-alpine'
            args '-v $HOME/.m2:/root/.m2' 
        }
    }
    stages {
        stage('maven-build') {
            steps {
                echo "mvn --version"
                sh 'mvn clean install -DskipTests'
            }
        }
        stage('docker-build') {
            steps {
                sh 'docker build -t java-app:1.0 .'
            }
        }
    }
}